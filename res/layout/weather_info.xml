<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

    <LinearLayout
        android:id="@+id/weather_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lexington"
        android:id="@+id/location"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999"
            android:textSize="150dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/currTemp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:text="Clear"
                android:layout_gravity="center_horizontal"
                android:id="@+id/description"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="description"
                android:layout_gravity="center_horizontal"
                android:id="@+id/descriptionDetail"/>
        </LinearLayout>
        <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="hi/lo"
                android:id="@+id/hilo"/>-->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/prev_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/arrow_left"
            android:background="#00000000"
            />
        <ImageButton
            android:id="@+id/next_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"
            android:background="#00000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/switch_user"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="switch user"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            style="@style/CloudButton"
            />
        <Button
            android:id="@+id/add_location"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="add location"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            style="@style/CloudButton"
            />
    </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/loading_animation" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Getting Weather..."
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>
